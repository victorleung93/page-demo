<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post" action="/add">
              <div class="form-group">
                <label for="NameTextField">Title</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Book Name" name="title" id="title" value="<%= books.Title %>" required>
              </div>
              <div class="form-group">
                <label for="PriceTextField">Price</label>
                <input type="text" class="form-control" id="PriceTextField"
                placeholder="Book Price" name="price" id="price" value="<%= books.Price %>"  required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Author</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Book Author" name="author" id="author" value="<%= books.Author %>"  required>
              </div>
              <div class="form-group">
                <label for="GenreTextField">Genre</label>
                <input type="text" class="form-control" id="GenreTextField"
                placeholder="Book Genre" name="genre" id=""genre value="<%= books.Genre %>"  required>
              </div>

              <button type="submit" class="btn btn-primary" onclick="addbook(event)"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>

<script>
  async function addbook(event){
    
    const title = document.getElementById("title").value;
    const price = document.getElementById("price").value;
    const author = document.getElementById("author").value;
    const genre = document.getElementById("genre").value;
   
    var book = fetch('/add',{method : 'post'},{body:JSON.stringify(title, price, author, genre)
      
    })
}
</script>
